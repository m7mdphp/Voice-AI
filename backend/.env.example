# ==========================================
# GOOGLE CLOUD CONFIG (إعدادات جوجل كلاود)
# ==========================================
# المسار المطلق لملف الاعتماد (Service Account JSON)
# تأكد من عدم رفع الملف الفعلي إلى GitHub
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# معرف مشروع Firebase/Google Cloud
FIRESTORE_PROJECT_ID=tiryaq-voice-agent-prod

# مفتاح API الخاص بـ Gemini 3 Pro (للذكاء الاصطناعي)
GEMINI_API_KEY=your_gemini_api_key_here

# مفتاح API الخاص بـ Groq (Llama 3 - LLM Core)
GROQ_API_KEY=gsk_your_groq_api_key_here

# مفتاح API الخاص بـ OpenAI (Whisper STT - تحويل الصوت إلى نص)
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# مفتاح API الخاص بـ ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=sk_your_elevenlabs_api_key_here

# ==========================================
# SERVER CONFIG (إعدادات الخادم)
# ==========================================
# مستوى التسجيل (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# معرف المستأجر الافتراضي (للاختبار المحلي)
TENANT_ID_DEFAULT=dev_tenant_01

# منفذ الخادم (تغييره يتطلب تعديل Dockerfile)
PORT=8000
